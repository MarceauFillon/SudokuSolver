<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vertuoses.sudoku_solver.GridDisplay">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridDisplay"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:maxWidth="382dp"
        android:maxHeight="382dp"
        >
    </GridLayout>

    <Chronometer
        android:id="@+id/timeSpentOnGrid"
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridDisplay"
        app:layout_constraintVertical_bias="0.163" />

    <Button
        android:id="@+id/resolveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Resolve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeSpentOnGrid" />

</android.support.constraint.ConstraintLayout>
